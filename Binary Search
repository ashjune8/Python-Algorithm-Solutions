#Using Recursion

def binary_search(lst,ele):
    if len(lst) == 0:
        return False
    mid = len(lst)/2
    start = 0
    end = len(lst)
    if ele == lst[mid]:
        return True
    elif ele < lst[mid]:
        end = mid 
        return binary_search(lst[:mid],ele)
    else:
        start = mid + 1
        return binary_search(lst[start:],ele)
        
        
#Non-Recursion

def binary_search(lst, ele):
    start = 0
    end = len(lst)
    mid = (start + end) / 2
    found = False
    while mid >= start and mid <= end :
        if lst[mid] == ele:
            found = True
            return True
        elif ele < lst[mid]:
            end = mid - 1
            mid = (start + end) / 2
        elif ele > lst[mid]:
            start = mid + 1
            mid = (start + end) / 2
        
    return found

        
        
